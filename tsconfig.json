

{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "react",
    "sourceMap": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "paths": {
      "layout": ["layout"],
      "scenes": ["scenes"],
      "core": ["core"],
      "pods": ["pods"],
      "common": ["common"],
      "content": ["content"],
      "locales": ["locales"]
    }
  },
  "compileOnSave": false,
  "exclude": ["node_modules"]
}
